<!DOCTYPE html>
<html>
<head>
  <title>SocialBuy</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-static-top" style="margin-bottom: 20px;">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="<%= root_path %>">好友购</a>
        <ul class="nav">
          <li class="active"><a href="<%= root_path %>">首页</a></li>
          <li><a href="<%= stores_path %>">店铺</a></li>
          <li><a href="">标签</a></li>
        </ul>
        <div class="pull-right">
          <% if signed_in? %>
            <ul class="nav">
              <li class="dropdown"><a href="<%= user_path(current_user.uid) %>"><i class="icon-user icon-white"></i> <%= current_user.name %></a> </li>
            </ul>
          <% else %>
            <a href="/auth/weibo" class="btn btn-info btn-small">新浪微博登录</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
