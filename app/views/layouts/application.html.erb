<!DOCTYPE html>
<html>
<head>
  <title>SocialBuy</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-static-top" style="margin-bottom: 20px;">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="<%= root_path %>">好友购</a>
        <ul class="nav">
          <li class="active"><a href="<%= root_path %>">首页</a></li>
          <li><a href="<%= stores_path %>">店铺</a></li>
          <li><a href="">好友</a></li>
        </ul>
        <div class="pull-right">
          <% if signed_in? %>
            <ul class="nav">
              <li class="dropdown">
                <a href="<%= user_path(current_user.uid) %>" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-user icon-white"></i>
                  <%= current_user.name %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="<%=user_path(current_user.uid)%>">我的主页</a></li>
                  <li><a href="<%=logout_path%>">退出</a></li>
                </ul>
              </li>
            </ul>
          <% else %>
            <a href="/auth/weibo" class="btn btn-info btn-small">新浪微博登录</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
