<div id="panel_contact">
  <p>已有联系方式</p>
  <div class="mb10">
    <ul class="unstyled clearfix">
    <% user.contacts.each do |contact| %>
      <li class="pull-left" style="margin-right: 15px;">
        <div class="input-prepend">
          <div class="btn-group">
            <a title="" href="javascript:void(0);" class="btn"><%= contact.provider %></a>
            <a title="删除" class="btn" href="javascript:void(0);"><i class="icon-remove"></i></a>
          </div>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
  <p>绑定更多的联系方式</p>
  <%= form_for user, remote: true, html: { class: 'form-inline' } do |f| %>
    <%= f.hidden_field :id %>
    <%= f.fields_for :contacts, Contact.new do |b| %>
      <%= b.hidden_field :id %>
      <%= b.select :provider, Contact.providers, {}, {:class => 'input-small'} %>
      <%= b.text_field :way, :placeholder => '联系方式' %>
      <%= b.submit "添加", :class => 'btn' %>
    <% end %>
  <% end %>
</div>